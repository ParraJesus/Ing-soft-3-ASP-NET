@model List<EstudianteCursoModel>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista de Inscripciones
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="EstudianteCurso" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nueva</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Estudiante_id</th>
                    <th>Curso_id</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Estudiante_id</td>
                        <td>@item.Curso_id</td>
                        <td>
                            <a asp-action="Eliminar" asp-controller="EstudianteCurso" class="btn btn-danger btn-sm" asp-route-Estudiante_id="@item.Estudiante_id" asp-route-Curso_id="@item.Curso_id">Eliminar</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

    </div>
</div>

